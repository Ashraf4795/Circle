<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="app_name_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tajawal_black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="small_text_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tajawal_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="normal_text_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:textSize">14sp</item>
    </style>




    <style name="medium_text_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tajawal_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="big_text_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tajawal_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!--rounded shape-->
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>
</resources>