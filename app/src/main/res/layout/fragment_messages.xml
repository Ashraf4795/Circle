<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:backgroundTint="@color/light_gray"
tools:context=".views.messages.MessagesFragment">


<ImageView
    android:id="@+id/back_btn_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:src="@drawable/ic_baseline_arrow_back_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/notification_txt"
    style="@style/big_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:text="@string/messages"

    app:layout_constraintBottom_toBottomOf="@+id/back_btn_id"
    app:layout_constraintStart_toEndOf="@+id/back_btn_id"
    app:layout_constraintTop_toTopOf="parent" />

<!--todo does it valueable to include search box inside notifications screen-->
<androidx.cardview.widget.CardView
    android:id="@+id/search_card_id"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="@dimen/default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/notification_txt">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_edittext_id"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_msg"
        app:boxStrokeColor="@color/light_blue"
        app:boxStrokeWidth="4dp"
        app:boxStrokeWidthFocused="4dp"
        app:startIconDrawable="@drawable/ic_baseline_search_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.cardview.widget.CardView>

<androidx.recyclerview.widget.RecyclerView
    tools:listitem="@layout/message_item"
    android:id="@+id/notification_recycler_view_id"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/search_card_id" />
</androidx.constraintlayout.widget.ConstraintLayout>