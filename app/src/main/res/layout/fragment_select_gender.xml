<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.signup.select_gender_screen.SelectGenderFragment" >

    <TextView
        android:id="@+id/upload_pic_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/upload_profile_pic"
        style="@style/medium_text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_img_id"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_pic_tv_id"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/choose_gender_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/choose_your_gender"
        style="@style/medium_text_style"
        app:layout_constraintStart_toStartOf="@+id/upload_pic_tv_id"
        app:layout_constraintTop_toBottomOf="@+id/user_img_id" />

    <Button
        android:id="@+id/male_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/male"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/gray"
        android:background="@drawable/button_border_bg"
        app:layout_constraintStart_toStartOf="@+id/choose_gender_tv_id"
        app:layout_constraintTop_toBottomOf="@+id/choose_gender_tv_id" />

    <Button
        android:id="@+id/female_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/female"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/male_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/male_btn_id"
        app:layout_constraintTop_toBottomOf="@+id/choose_gender_tv_id" />
</androidx.constraintlayout.widget.ConstraintLayout>