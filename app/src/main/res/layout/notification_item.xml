<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_item_parent"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="8dp"
    android:background="@color/light_gray">


    <ImageView
        android:id="@+id/notification_image_id"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/notification_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/notification_image_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/placeholder_text" />

    <ImageView
        android:id="@+id/calendare_icon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/notification_date_txt_id"
        app:layout_constraintStart_toStartOf="@+id/notification_message_id"
        app:layout_constraintTop_toTopOf="@+id/notification_date_txt_id"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

    <TextView
        android:id="@+id/notification_date_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendare_icon"
        app:layout_constraintTop_toBottomOf="@+id/notification_message_id"
        app:layout_constraintVertical_bias="0.0"
        tools:text="12/01/2021" />
</androidx.constraintlayout.widget.ConstraintLayout>
