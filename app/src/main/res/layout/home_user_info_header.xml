<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="16dp"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/home_header_date_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Today 10 JAN 2021"
        style="@style/small_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/big_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_header_date_id"
        tools:text="Hello, Osama" />

    <ImageView
        android:id="@+id/profile_pic_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_avatar_shape"
        android:src="@drawable/profile_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chat_icon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_chat_bubble_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/profile_pic_id"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chat_notification_icon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/chat_notification_counter_icon"
        app:layout_constraintEnd_toEndOf="@+id/chat_icon_id"
        app:layout_constraintTop_toTopOf="@+id/chat_icon_id" />
</androidx.constraintlayout.widget.ConstraintLayout>